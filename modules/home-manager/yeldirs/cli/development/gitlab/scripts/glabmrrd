# Setting environmental variables


die()
{
	local _ret="${2:-1}"
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	echo "$1" >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options='hbti'
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# THE DEFAULTS INITIALIZATION - POSITIONALS
_positionals=()
_arg_mrid=
# THE DEFAULTS INITIALIZATION - OPTIONALS
_arg_comparison_base="0"
_arg_comparison_target="-1"
_arg_interval="5"


print_help()
{
	printf '%s\n' "Range-diff versions of a GitLab MR."
	printf 'Usage: %s [-h|--help] [-b|--comparison-base <arg>] [-t|--comparison-target <arg>] [-i|--interval <arg>] <mrid>\n' "$0"
	printf '\t%s\n' "<mrid>: GitLab MR ID"
	printf '\t%s\n' "-h, --help: Prints help"
	printf '\t%s\n' "-b, --comparison-base: index of version to use as base for comparison. 0 is the latest version, -1 is the previous, etc. (default: '0')"
	printf '\t%s\n' "-t, --comparison-target: index of version to use as target for comparison. 0 is the latest version, -1 is the previous, etc. (default: '-1')"
	printf '\t%s\n' "-i, --interval: seconds to wait in between runs of cmd (default: '5')"
	printf '\nEnvironment variables that are supported:\n'
	printf '\t%s\n' "GITLAB_TOKEN: PAT for GitLab API access."

}


parse_commandline()
{
	_positionals_count=0
	local _key
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			-h|--help)
				print_help
				exit 0
				;;
			-h*)
				print_help
				exit 0
				;;
			-b|--comparison-base)
				test $# -lt 2 && die "Missing value for the optional argument '$_key'." 1
				_arg_comparison_base="$2"
				shift
				;;
			--comparison-base=*)
				_arg_comparison_base="${_key##--comparison-base=}"
				;;
			-b*)
				_arg_comparison_base="${_key##-b}"
				;;
			-t|--comparison-target)
				test $# -lt 2 && die "Missing value for the optional argument '$_key'." 1
				_arg_comparison_target="$2"
				shift
				;;
			--comparison-target=*)
				_arg_comparison_target="${_key##--comparison-target=}"
				;;
			-t*)
				_arg_comparison_target="${_key##-t}"
				;;
			-i|--interval)
				test $# -lt 2 && die "Missing value for the optional argument '$_key'." 1
				_arg_interval="$2"
				shift
				;;
			--interval=*)
				_arg_interval="${_key##--interval=}"
				;;
			-i*)
				_arg_interval="${_key##-i}"
				;;
			*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string="'mrid'"
	test "${_positionals_count}" -ge 1 || _PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require exactly 1 (namely: $_required_args_string), but got only ${_positionals_count}." 1
	test "${_positionals_count}" -le 1 || _PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect exactly 1 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}')." 1
}


assign_positional_args()
{
	local _positional_name _shift_for=$1
	_positional_names="_arg_mrid "

	shift "$_shift_for"
	for _positional_name in ${_positional_names}
	do
		test $# -gt 0 || break
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an Argbash bug." 1
		shift
	done
}

parse_commandline "$@"
handle_passed_args_count
assign_positional_args 1 "${_positionals[@]}"

# OTHER STUFF GENERATED BY Argbash

### END OF CODE GENERATED BY Argbash (sortof) ### ])
# [ <-- needed because of Argbash
set -euo pipefail

if [[ "${_arg_comparison_base}" -gt 0 ]]; then
	echo "--comparison-base must be 0 or negative"
	exit 1
elif [[ "${_arg_comparison_base}" -lt 0 ]]; then
	_arg_comparison_base=$((-_arg_comparison_base))
fi
if [[ "${_arg_comparison_target}" -gt 0 ]]; then
	echo "--comparison-target must be 0 or negative"
	exit 1
elif [[ "${_arg_comparison_target}" -lt 0 ]]; then
	_arg_comparison_target=$((-_arg_comparison_target))
fi


glabmrversions "${_arg_mrid}" | jq -r "[.[${_arg_comparison_target}], .[${_arg_comparison_base}]] | map(.start_commit_sha + \"..\" + .head_commit_sha) | reverse | join(\" \")" | xargs -I{} bash -c 'git range-diff {}'

# ] <-- needed because of Argbash
