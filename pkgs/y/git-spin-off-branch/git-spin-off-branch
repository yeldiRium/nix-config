die()
{
	local _ret="${2:-1}"
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	echo "$1" >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options='h'
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# THE DEFAULTS INITIALIZATION - POSITIONALS
_positionals=()
_arg_branch_name=
# THE DEFAULTS INITIALIZATION - OPTIONALS


print_help()
{
	printf '%s\n' "Creates a new branch at head, resets the active branch to its upstream, and switches to the newly created branch."
	printf 'Usage: %s [-h|--help] <branch-name>\n' "$0"
	printf '\t%s\n' "<branch-name>: name for the new branch"
	printf '\t%s\n' "-h, --help: Prints help"
}


parse_commandline()
{
	_positionals_count=0
	local _key
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			-h|--help)
				print_help
				exit 0
				;;
			-h*)
				print_help
				exit 0
				;;
			*)
				_last_positional="$1"
				_positionals+=("$_last_positional")
				_positionals_count=$((_positionals_count + 1))
				;;
		esac
		shift
	done
}


handle_passed_args_count()
{
	local _required_args_string="'branch-name'"
	test "${_positionals_count}" -ge 1 || _PRINT_HELP=yes die "FATAL ERROR: Not enough positional arguments - we require exactly 1 (namely: $_required_args_string), but got only ${_positionals_count}." 1
	test "${_positionals_count}" -le 1 || _PRINT_HELP=yes die "FATAL ERROR: There were spurious positional arguments --- we expect exactly 1 (namely: $_required_args_string), but got ${_positionals_count} (the last one was: '${_last_positional}')." 1
}


assign_positional_args()
{
	local _positional_name _shift_for=$1
	_positional_names="_arg_branch_name "

	shift "$_shift_for"
	for _positional_name in ${_positional_names}
	do
		test $# -gt 0 || break
		eval "$_positional_name=\${1}" || die "Error during argument parsing, possibly an Argbash bug." 1
		shift
	done
}

parse_commandline "$@"
handle_passed_args_count
assign_positional_args 1 "${_positionals[@]}"

# OTHER STUFF GENERATED BY Argbash

### END OF CODE GENERATED BY Argbash (sortof) ### ])
# [ <-- needed because of Argbash
set -euo pipefail

function error() {
	echo "${1}" >/dev/stderr
	exit 1
}

function info() {
	echo "${1}" >/dev/stderr
}

newBranchName="${_arg_branch_name}"

if [[ -z "${newBranchName}" ]]; then
	error "--branch-name must not be empty"
fi

currentHash=$(git rev-list -n1 HEAD)
currentBranch=$(git branch --show-current --format="%(refname:short)")

if [[ -z "${currentBranch}" ]]; then
	error "detached HEAD; cannot spin-off"
fi

upstreamBranchRefName=$(git config get "branch.${currentBranch}.merge" || echo "")
if [[ -z "${upstreamBranchRefName}" ]]; then
	error "could not find upstream for current branch"
fi
upstreamBranchName=$(echo "${upstreamBranchRefName}" | sed 's/refs\/heads\///')
upstreamBranchRemoteName=$(git config get "branch.${currentBranch}.remote" || echo "")
if [[ -z "${upstreamBranchRemoteName}" ]]; then
	error "could not find upstream for current branch"
fi
upstreamBranchName="${upstreamBranchRemoteName}/${upstreamBranchName}"
upstreamHash="$(git rev-parse "${upstreamBranchName}")"


info "creating new branch ${newBranchName} at rev ${currentHash:0:7}"
git switch --create "${newBranchName}"
info "resetting branch ${currentBranch} to upstream ${upstreamBranchName}"
git update-ref "refs/heads/${currentBranch}" "${upstreamHash}"

# ] <-- needed because of Argbash
