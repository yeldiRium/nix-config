#!/usr/bin/env bash

# ARG_POSITIONAL_SINGLE([branch-name],[name for the new branch])
# ARG_HELP([Creates a new branch at head, resets the active branch to its upstream, and switches to the newly created branch.])
# ARG_DEFAULTS_POS([])
# ARGBASH_GO()
